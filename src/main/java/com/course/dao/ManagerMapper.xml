<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.course.dao.ManagerMapper">
	<resultMap id="BaseResultMap" type="com.course.entity.Manager">
		<id column="account" jdbcType="VARCHAR" property="account" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="password" jdbcType="VARCHAR" property="password" />
	</resultMap>
	<select id="selectByAccountAndPassword" resultMap="BaseResultMap">
		select * from
		manager
		where account =
		#{account,jdbcType=VARCHAR}
		and password =
		#{password,jdbcType=VARCHAR}
	</select>
	<update id="updatePassword">
		update manager set password = #{password} where
		account = #{account}
	</update>
</mapper>